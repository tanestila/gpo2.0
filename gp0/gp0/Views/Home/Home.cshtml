@model IEnumerable<gp0.ViewModels.DocumentView>
@{
    ViewData["Title"] = "Home Page";
    Layout = "HomeLayout";
}
<table class="table">
    <thead class="thead-light">
    <tr>
        <th scope="col">Отправитель</th>
        <th scope="col">Дата</th>
        <th scope="col">Сообщение</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var doc in Model)
        {
        <tr>
            <td><a style="color:gainsboro" asp-action="inDocument" asp-controller="Home" asp-route-id="@doc.id">@doc.sender</a></td>
            <td>@doc.date</td>
            <td><a style="color:gainsboro" asp-action="inDocument" asp-controller="Home" asp-route-id="@doc.id">@doc.text</a></td>
        </tr>
        }
    </tbody>
</table>



